@page "/profile/analysis"
<h3>User Panel</h3>
<br/>
<br/>
<br/>


<RadzenCard Style="height: auto; margin-bottom: auto; width: auto;">
    <div class="row">
        <div class="col-md-6">
            <h4>20% taken off by Fotostop. Not including taxes. Thank you for your cooperation!</h4>
        </div>
    </div>
</RadzenCard>

@if (PieChartItems != null)
{
    if (RevenueTotal > 0)
    {
        <div class="row">
            <div class="col-md-6 col-sm-12 p-4">
                <RadzenChart>
                    <h2>Types of Items sold</h2>
                    <RadzenPieSeries Data="@PieChartItems" Title="Item Type Revenue" CategoryProperty="Type" ValueProperty="Revenue"/>
                </RadzenChart>
            </div>
        </div>
    }
    else
    {
        <RadzenCard Style="height: auto; margin-bottom: auto; width: auto;">
            <div class="row">
                <div class="col-md-6">
                    <h4>You have sold no items yet for any major analysis to be available.</h4>
                </div>
            </div>
        </RadzenCard>
    }
}


@if ((RevenueTotal != null) | (RevenueTotal > 0.00))
{
    <RadzenCard Style="height: auto; margin-bottom: auto; width: auto;" Name="money" Id="money">
        <div class="row">
            <div class="col-md-6">
                <h4 id="money">Revenue accumulated for this period: </h4>
                <h5>€@Math.Round(RevenueTotal, 2, MidpointRounding.AwayFromZero)</h5>

            </div>
        </div>
    </RadzenCard>
}